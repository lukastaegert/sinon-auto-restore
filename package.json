{
  "name": "sinon-auto-restore",
  "description": "Automatically restore stubs and spies after tests",
  "author": "Lukas Taegert <lukas.taegert@tngtech.com>",
  "license": "MIT",
  "main": "index.js",
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "refactor",
        "test",
        "chore",
        "revert"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lukastaegert/sinon-auto-restore.git"
  },
  "keywords": [
    "sinon"
  ],
  "bugs": {
    "url": "https://github.com/lukastaegert/sinon-auto-restore/issues"
  },
  "homepage": "https://github.com/lukastaegert/sinon-auto-restore#readme",
  "dependencies": {
    "ramda": ">= 0.23.0"
  },
  "devDependencies": {
    "chai": "^4.0.0",
    "codecov": "^2.1.0",
    "husky": "^0.13.3",
    "istanbul": "^0.4.5",
    "lint-staged": "^3.4.0",
    "mocha": "^3.3.0",
    "semantic-release": "^6.3.2",
    "standard": "^10.0.2",
    "testdouble": "^2.1.2",
    "validate-commit-msg": "^2.12.1"
  },
  "scripts": {
    "test": "mocha",
    "lint": "standard",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "precommit": "lint-staged",
    "commitmsg": "validate-commit-msg",
    "prepush": "npm test",
    "postmerge": "npm install && npm prune",
    "postrewrite": "npm install && npm prune"
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ]
  }
}
